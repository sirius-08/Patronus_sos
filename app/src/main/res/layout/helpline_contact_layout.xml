<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id = "@+id/helpline_contact_rootview"
    android:layout_width="match_parent"
    android:layout_height="88dp"
    android:orientation="horizontal">

    <TextView
        android:id = "@+id/helpline_name_view"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:paddingLeft="16dp"
        android:paddingRight="8dp"
        tools:text = "Helpline Name"
        android:gravity="center_vertical"
        android:maxLines="4"/>

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/s6_call_circle_receive_01"
        android:layout_gravity="center_vertical"/>

    <TextView
        android:id = '@+id/helpline_number_view'
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingLeft="8dp"
        android:paddingRight="16dp"
        tools:text = "Helpline Number"
        android:gravity="center_vertical"/>

</LinearLayout>